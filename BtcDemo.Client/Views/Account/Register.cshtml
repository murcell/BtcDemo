@model BtcDemo.Client.Models.UserRegisterModel

<div class="row justify-content-center">
    <div class="col-lg-5">
        <div class="card shadow-lg border-0 rounded-lg mt-5">
            <div class="card-header"><h3 class="text-center font-weight-light my-4"><span class="fas fa-house-user"></span> Kayıt Ol</h3></div>
            <div class="card-body">
                <form asp-controller="Account" asp-action="Register" method="post">

                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group">
                        <label class="small mb-1" asp-for="UserName">Kullanıcı Adı</label>
                        <input class="form-control py-2" asp-for="UserName" type="text" placeholder="Lütfen adınızı giriniz." />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="small mb-1" asp-for="Email">Email</label>
                        <input class="form-control py-2" asp-for="Email" type="email" placeholder="Lütfen Email adresinizi giriniz." />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="small mb-1" for="inputPassword">Password</label>
                        <input class="form-control py-2" asp-for="Password" type="password" placeholder="Lütfen şifrenizi giriniz." />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="card-footer text-center">
                        <button class="btn btn-success"><span class="fas fa-user-edit"></span> Kaydı tamamla</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Home">Home</a>
</div>

